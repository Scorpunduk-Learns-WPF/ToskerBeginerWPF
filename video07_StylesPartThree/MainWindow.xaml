<Window
    x:Class="video07_StylesPartThree.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:video07_StylesPartThree"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="500"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="50">
            <Label Style="{StaticResource BigLabel}">BIG LABEL</Label>
            <Label Style="{StaticResource TextBoxLabel}">Full Name</Label>
            <TextBox />
            <Button Style="{StaticResource SubmitButtonStyle}">Submit</Button>
            <Button Style="{StaticResource CancelButtonStyle}">Cancel</Button>
        </StackPanel>

    </Grid>
</Window>
