<Window
    x:Class="video06_StylesPartTwo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:video06_StylesPartTwo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <!--  it is about application resources  -->
    <Grid>
        <StackPanel>
            <Button>
                BaseButton
            </Button>
            <Button Style="{StaticResource DarkButtonStyle}">
                DarkButton
            </Button>
            <Button Style="{StaticResource LightButtonStyle}">
                LightButton
            </Button>
        </StackPanel>
    </Grid>
</Window>
